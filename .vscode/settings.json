{
    // Makefile
    "makefile.configureOnOpen": false,

    // Python & Django Settings
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.terminal.activateEnvironment": true,

    // Django-specific: Tell Python where to find modules
    "python.analysis.extraPaths": [
        "${workspaceFolder}",
        "${workspaceFolder}/spookyoctober"
    ],

    // Tailwind CSS IntelliSense
    "tailwindCSS.includeLanguages": {
        "html": "html",
        "django-html": "html"
    },
    "tailwindCSS.experimental.classRegex": [
        ["class: ['\"]([^'\"]*)['\"]"],
        ["class\\s*=\\s*['\"]([^'\"]*)['\"]"]
    ],

    // File Associations - Treat Django templates as HTML
    "files.associations": {
        "*.html": "html",
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html"
    },

    // Emmet for Django Templates
    "emmet.includeLanguages": {
        "django-html": "html"
    },
    "emmet.triggerExpansionOnTab": true,

    // Editor Settings
    "editor.formatOnSave": false,  // Don't auto-format templates (Django syntax)
    "editor.quickSuggestions": {
        "strings": true  // Enable IntelliSense in strings (for Tailwind classes)
    },
    "editor.tabSize": 4,
    "editor.rulers": [88, 120],  // Python PEP 8 line length guides

    // CSS/Tailwind
    "css.validate": true,
    "css.lint.unknownAtRules": "ignore",  // Ignore @tailwind warnings

    // File Explorer - Hide clutter
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true
    },

    // Search - Exclude generated files
    "search.exclude": {
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/staticfiles": true,
        "**/*.pyc": true,
        "**/migrations": false  // Keep migrations searchable
    },

    // Git
    "git.ignoreLimitWarning": true,

    // Helpful Visual Aids
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 120,

    // IntelliSense
    "editor.suggestSelection": "first",
    "editor.wordBasedSuggestions": "matchingDocuments",

    // Django Template Syntax Highlighting
    "[django-html]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false,
        "editor.tabSize": 2
    },

    // HTML
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 2
    },

    // Python Formatting
    "[python]": {
        "editor.formatOnSave": false,  // Disable to avoid conflicts
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // CSS
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features",
        "editor.tabSize": 2
    },

    // JavaScript
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2
    }
}