.PHONY: help setup run dev install migrate makemigrations createsuperuser shell test clean collectstatic check deploy-check css css-watch lint-templates format-templates

help:
	@echo "ShriekedIn - Django Project Makefile"
	@echo ""
	@echo "Available commands:"
	@echo "  make setup            - Initial project setup (first time only)"
	@echo "  make run              - Run the Django development server"
	@echo "  make dev              - üöÄ Run dev server with auto-reload (CSS + templates)"
	@echo "  make install          - Install project dependencies"
	@echo "  make migrate          - Run database migrations"
	@echo "  make makemigrations   - Create new database migrations"
	@echo "  make createsuperuser  - Create a Django admin superuser"
	@echo "  make shell            - Open Django shell"
	@echo "  make test             - Run tests"
	@echo "  make check            - Run Django system checks"
	@echo "  make collectstatic    - Collect static files"
	@echo "  make css              - Build Tailwind CSS"
	@echo "  make css-watch        - Watch and rebuild Tailwind CSS on changes"
	@echo "  make lint-templates   - Check Django templates with djlint"
	@echo "  make format-templates - Auto-format Django templates with djlint"
	@echo "  make clean            - Remove Python cache files and SQLite db"
	@echo "  make deploy-check     - Verify Heroku deployment readiness"
	@echo ""

setup:
	@echo "üéÉ Setting up ShriekedIn for the first time..."
	@if [ ! -f .env ]; then \
		echo "üìù Creating .env file..."; \
		cp .env.example .env; \
		echo "‚úÖ .env file created"; \
	else \
		echo "‚úÖ .env file already exists"; \
	fi
	@echo "üì¶ Installing Python dependencies..."
	@pip install -r requirements.txt
	@echo "üì¶ Installing Node dependencies..."
	@npm install
	@echo "üé® Building Tailwind CSS..."
	@npm run build:css
	@echo "üóÑÔ∏è  Running migrations..."
	@python manage.py migrate
	@echo "üì¶ Collecting static files..."
	@python manage.py collectstatic --noinput
	@echo ""
	@echo "‚ú® Setup complete! Run 'make run' to start the development server."
	@echo "üí° Visit http://localhost:8000/ to see your app!"
	@echo ""

run:
	@if [ ! -f .env ]; then \
		echo "‚ö†Ô∏è  .env file not found! Run 'make setup' first."; \
		exit 1; \
	fi
	@echo "üéÉ Starting ShriekedIn development server..."
	@echo ""
	@echo "üí° Visit: http://127.0.0.1:8000/ or http://localhost:8000/"
	@echo "‚ö†Ô∏è  Important: Use HTTP (not HTTPS)"
	@echo "üí° Tip: If your browser redirects to HTTPS, use 127.0.0.1 instead of localhost"
	@echo ""
	@python manage.py runserver 127.0.0.1:8000

install:
	@echo "üì¶ Installing dependencies..."
	pip install -r requirements.txt

migrate:
	@echo "üóÑÔ∏è  Running database migrations..."
	python manage.py migrate

makemigrations:
	@echo "üìù Creating new migrations..."
	python manage.py makemigrations

createsuperuser:
	@echo "üë§ Creating admin superuser..."
	python manage.py createsuperuser

shell:
	@echo "üêö Opening Django shell..."
	python manage.py shell

test:
	@echo "üß™ Running tests..."
	python manage.py test

check:
	@echo "‚úÖ Running Django system checks..."
	python manage.py check

collectstatic:
	@echo "üì¶ Collecting static files..."
	python manage.py collectstatic --noinput

css:
	@echo "üé® Building Tailwind CSS..."
	npm run build:css

css-watch:
	@echo "üëÄ Watching Tailwind CSS for changes..."
	npm run watch:css

clean:
	@echo "üßπ Cleaning up..."
	find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete
	find . -type f -name "*.pyo" -delete
	find . -type f -name "*.db" -delete
	find . -type d -name "*.egg-info" -exec rm -rf {} + 2>/dev/null || true
	rm -rf .pytest_cache
	rm -rf .coverage
	rm -f db.sqlite3
	@echo "‚ú® Cleanup complete!"

deploy-check:
	@echo "üöÄ Checking Heroku deployment readiness..."
	@echo ""
	@echo "Required files:"
	@test -f Procfile && echo "  ‚úÖ Procfile exists" || echo "  ‚ùå Procfile missing"
	@test -f runtime.txt && echo "  ‚úÖ runtime.txt exists" || echo "  ‚ùå runtime.txt missing"
	@test -f requirements.txt && echo "  ‚úÖ requirements.txt exists" || echo "  ‚ùå requirements.txt missing"
	@echo ""
	@echo "Django checks:"
	@python manage.py check --deploy 2>/dev/null && echo "  ‚úÖ Django deployment checks passed" || echo "  ‚ö†Ô∏è  Django deployment checks have warnings (review them)"
	@echo ""
	@echo "Environment variables needed on Heroku:"
	@echo "  - SECRET_KEY"
	@echo "  - DEBUG=False"
	@echo "  - ALLOWED_HOSTS=<your-app>.herokuapp.com"
	@echo "  - DATABASE_URL (auto-set by Heroku PostgreSQL)"
	@echo ""
	@echo "Ready to deploy! Run: git push heroku main"

lint-templates:
	@echo "üîç Checking Django templates with djlint..."
	@djlint templates/ --check || true
	@echo ""
	@echo "üí° To auto-format templates, run: make format-templates"

format-templates:
	@echo "‚ú® Formatting Django templates with djlint..."
	@djlint templates/ --reformat
	@echo ""
	@echo "‚úÖ Templates formatted!"

dev:
	@if [ ! -f .env ]; then \
		echo "‚ö†Ô∏è  .env file not found! Run 'make setup' first."; \
		exit 1; \
	fi
	@echo "üéÉ Starting ShriekedIn Development Environment..."
	@echo "=================================================="
	@echo ""
	@echo "üîç Running initial template checks..."
	@echo ""
	@djlint templates/ --check || true
	@echo ""
	@echo "=================================================="
	@echo "üöÄ Starting services with LIVE RELOAD:"
	@echo "  ‚Ä¢ Django dev server on http://127.0.0.1:8000/"
	@echo "  ‚Ä¢ Tailwind CSS watcher (auto-rebuilds on changes)"
	@echo "  ‚Ä¢ Browser auto-reload (on Python/template/static changes)"
	@echo ""
	@echo "‚ú® Features:"
	@echo "  ‚Ä¢ üîÑ Browser refreshes automatically when files change"
	@echo "  ‚Ä¢ üé® CSS updates without manual refresh"
	@echo "  ‚Ä¢ üìÑ Template changes reload instantly"
	@echo ""
	@echo "üí° Tip: Use http://127.0.0.1:8000/ (not localhost)"
	@echo "üí° Press Ctrl+C to stop all services"
	@echo "=================================================="
	@echo ""
	@trap 'echo ""; echo "üõë Stopping all services..."; jobs -p | xargs -r kill 2>/dev/null; exit 0' INT TERM EXIT; \
	npm run watch:css > /dev/null 2>&1 & \
	TAILWIND_PID=$$!; \
	echo "‚úÖ Tailwind CSS watcher started (PID: $$TAILWIND_PID)"; \
	sleep 1; \
	echo "‚úÖ Django dev server starting with live reload enabled..."; \
	echo ""; \
	python manage.py runserver 127.0.0.1:8000; \
	wait
